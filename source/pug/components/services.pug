mixin services()

  -
    var services = [
      {
        path: 'svg',
        image: 'icon-route',
        format: 'svg',
        width: '230',
        height: '200',
        text: 'Экспресс доставка Москва - Минск - Москва'
      },
      {
        path: 'svg',
        image: 'icon-maps',
        format: 'svg',
        width: '230',
        height: '200',
        text: 'Доставка по всей России'
      },
      {
        path: 'svg',
        image: 'icon-plane',
        format: 'svg',
        width: '230',
        height: '200',
        text: 'Доставка из аэропортов Москвы'
      },
      {
        path: 'svg',
        image: 'icon-ikea',
        format: 'svg',
        width: '230',
        height: '200',
        text: 'Доставка из IKEA'
      },
    ];

  section.services
    .services__wrapper.container
      h2 Услуги
      ul
        each item in services
          li
            a(href="#")
              article
                +img(item.path, item.image, item.format, item.width, item.height, item.text)
                p= item.text
