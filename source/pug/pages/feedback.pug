    section#feedback-form.form-order.form-order--feedback
      video(width="100%" height="1000" autoplay loop)
        source( src="assets/video/feedback.mp4" type="video/mp4")
      .form-order__wrapper.container
        .form-order__inner-box
          .form-order__wrap-box
            form.form-order__box
              .form-order__box-1.form-order__active
                h3 Оставить отзыв
                .form-order__points-box
                  .form-order__points
                    .form-order__point-1
                      input(id="user-image" type="file" name="photo")
                      img.user-img(src="assets/img/jpg/author-1.jpg" width="40" height="40")
                      label(for="user-image")
                        +img('svg', 'icon-photo', 'svg', '40', '400', 'Прикрепить фото')
                    .form-order__point-2
                      input(id="point-2" type="text")
                      label(for="point-2") Имя/ Компания*
                  .form-group__box
                    .form-order__point-3
                      input(id="user-phone" type="text")
                      label(for="user-phone") Телефон
                    .form-order__point-4
                      input(id="user-email" type="text")
                      label(for="user-email") E-mail*
                    .form-order__textarea
                      textarea(id="user-text")
                      label(for="user-text") Ваш отзыв
                  .form-order__rating
                    p Оцените сервис по 5-балльной шкале:
                  button(type="submit").button.button--effect-2.btn-js Оставить отзыв

block footer
  +footer

  section.modal.modal--feedback
    .modal__wrapper
      .modal__inner
        .modal__image
          +img('svg', 'image-plane-modal', 'svg', '250', '80', 'Элемент 1')
          +img('svg', 'image-box-big', 'svg', '550', '195', 'Элемент 2')
        .modal__box
          h2
            span Mexp
            |  благодарит за отзыв!
          p Ваше мнение очень важно для нас.
      a.modal__btn-closed(href="#")
        span.visually-hidden Закрыть модальное окно
